<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>
            index.html
        </welcome-file>
    </welcome-file-list>
    <!--Шутливый сервлет-->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>ru.mysite.web.servlets.MyKiddingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/takeThePhone</url-pattern>
    </servlet-mapping>

    <!--Проверка существования логина и добавление пользователя-->
    <servlet>
        <servlet-name>UserHandler</servlet-name>
        <servlet-class>ru.mysite.web.servlets.UserHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHandler</servlet-name>
        <url-pattern>/userhandler</url-pattern>
    </servlet-mapping>


    <!--Чат-->
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>ru.mysite.web.servlets.ChattingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/chatting</url-pattern>
    </servlet-mapping>


</web-app>